// This file is on test and all is fine and we continue, more and more
pipeline {
    agent {
        docker {
            image 'python:3.9.1'
            args '--user root'
        }
    }
    stages {
        stage ('Geocoder Tester') {
            steps {
                script {
                    if (env.DATASET == 'Strict') {
		                sh '''
		                    rm -rf venv/
		                    mkdir venv
		                    pip install virtualenv
		                    virtualenv venv -p python3
		                    . venv/bin/activate
		                    pip install -r requirements.txt
		                    py.test --api-url $bragi --tb short -s geocoder_tester/kisio/france
		                '''
                    }
                    if (env.DATASET == 'WorldFrance') {
		                sh '''
		                    rm -rf venv/
		                    mkdir venv
		                    pip install virtualenv
		                    virtualenv venv -p python3
		                    . venv/bin/activate
		                    pip install -r requirements.txt
		                    py.test --api-url $bragi --tb short -s geocoder_tester/world/france/
		                '''
                    }
                    if (env.DATASET == 'KisioStopAreasNetherlands') {
		                sh '''
		                    rm -rf venv/
		                    mkdir venv
		                    pip install virtualenv
		                    virtualenv venv -p python3
		                    . venv/bin/activate
		                    pip install -r requirements.txt
		                    py.test --api-url $bragi?pt_dataset[]=nl-c --tb short -s geocoder_tester/kisio/stop_areas/netherlands/ --loose-compare
		                '''
                    }
                    if (env.DATASET == 'KisioStopAreasFranceIledefrance') {
		                sh '''
		                    rm -rf venv/
		                    mkdir venv
		                    pip install virtualenv
		                    virtualenv venv -p python3
		                    . venv/bin/activate
		                    pip install -r requirements.txt
		                    py.test --api-url $bragi?pt_dataset[]=fr-idf --tb short -s geocoder_tester/kisio/stop_areas/france/iledefrance/
		                '''
                    }
                    if (env.DATASET == 'KisioStopAreasFranceNordPasdeCalais') {
		                sh '''
		                    rm -rf venv/
		                    mkdir venv
		                    pip install virtualenv
		                    virtualenv venv -p python3
		                    . venv/bin/activate
		                    pip install -r requirements.txt
		                    py.test --api-url $bragi?pt_dataset[]=fr-npdc --tb short -s geocoder_tester/kisio/stop_areas/france/nordpasdecalais/
		                '''
                    }
                    if (env.DATASET == 'WorldSwitzerland') {
		                sh '''
		                    rm -rf venv/
		                    mkdir venv
		                    pip install virtualenv
		                    virtualenv venv -p python3
		                    . venv/bin/activate
		                    pip install -r requirements.txt
		                    py.test --api-url $bragi --tb short -s geocoder_tester/world/switzerland/
		                '''
                    }
                }
            }
        }
    }
    post {
        failure { echo 'Job failed !' }
        success { echo 'Job is successful !' }
        always {
            cleanWs()
        }
    }
}

